<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Filter by"
            android:textColor="@color/vpi__bright_foreground_disabled_holo_dark"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/homeRecyclerView"
            android:textAlignment="center"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/filter_edittex_back"
                    android:weightSum="100">


                    <AutoCompleteTextView
                        android:id="@+id/actv_institute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:ems="10"
                        android:hint="Institute"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/done_institute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_done_black_24dp"
                        android:visibility="gone"
                        android:tint="@color/green"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/filter_edittex_back"
                    android:weightSum="100">


                    <AutoCompleteTextView
                        android:id="@+id/actv_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:ems="10"
                        android:hint="Course"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/done_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_done_black_24dp"
                        android:visibility="gone"
                        android:tint="@color/green"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/filter_edittex_back"
                    android:weightSum="100">


                    <AutoCompleteTextView
                        android:id="@+id/actv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:ems="10"
                        android:hint="State"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/done_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_done_black_24dp"
                        android:tint="@color/green"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/filter_edittex_back"
                    android:weightSum="100">


                    <AutoCompleteTextView
                        android:id="@+id/actv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:ems="10"
                        android:hint="City"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:id="@+id/done_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_done_black_24dp"
                        android:visibility="gone"
                        android:tint="@color/green"/>

                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Cancel"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/stadium_border_button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/apply_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:textColor="@color/white"
                        android:text="Apply"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/stadium_border_button"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>