<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/homeRecyclerView"
    app:cardCornerRadius="5dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="featured"
            android:padding="3.5dp"
            android:layout_marginTop="15dp"
            android:textSize="10dp"
            android:background="@drawable/featured_text_background"
            android:textColor="@color/white"
            android:layout_gravity="top|left"/>



        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/progress_bar_layout_fl"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/item_layout_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/logo_fl"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/college_name_fl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="National Institute Of Technology Sikkim National Institute Of Tech"
                        android:ellipsize="marquee"
                        android:layout_margin="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                        android:textColor="@color/homeText"
                        android:singleLine="true"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/colorAccent"
                            android:layout_gravity="center_vertical"

                            android:src="@drawable/location_color_primary_24dp"/>
                        <TextView
                            android:id="@+id/location_fl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/homeText"
                            android:text="Ravangla, Sikkim"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/colorAccent"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/rank_icon"/>

                        <TextView
                            android:id="@+id/rank_fl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/homeText"
                            android:text="#rank" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/explore_btn_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|end"
                android:background="@drawable/slider_button_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:text="Explore"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:tint="@color/green"
                        android:backgroundTint="@color/green"
                        android:src="@drawable/arrow_forward_white_24dp"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</com.google.android.material.card.MaterialCardView>